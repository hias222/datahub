{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false
  },
  "paths": {
    "@daos/*": [
      "src/daos/*"
    ],
    "@entities/*": [
      "src/entities/*"
    ],
    "@shared/*": [
      "src/shared/*"
    ]
  },
  "exclude": [
    "spec",
    "src/**/*.mock.ts",
    "src/public/"
  ]
}
